# make hexagon
import turtle

def get_hexagon(side):
  for _ in range(6):
    turtle.left(60)
    turtle.forward(side)

get_hexagon(100)

# make snowflake
import turtle

def get_rhombus(side):
  for _ in range(2):
    turtle.forward(side)
    turtle.left(60)
    turtle.forward(side)
    turtle.left(120)
  
def get_snowflake(count, engle, side):
  for _ in range(count):
    get_rhombus(side)
    turtle.left(engle)
    

get_snowflake(10, 36, 100)
